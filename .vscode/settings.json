{
  "editor.formatOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.yarn": true,
    "**/node_modules": true,
    "packages/*/build": true,
    "website/{.cache,public}": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "packages/*/build": true,
    "website/{.cache,public}": true
  },
  "stylelint.enable": true,
  "css.validate": false,
  "scss.validate": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": true,
    "source.fixAll.eslint": true
  },
  "typescript.tsdk": "./node_modules/typescript/lib"
}
