---
import Text from '@/components/Text/Text.astro';

interface Props {
  title?: string | undefined;
}

const { title } = Astro.props;
---

<Text as="h1" variant="heading1" class="hero">
  <Fragment set:html={title} />
</Text>

<style lang="scss">
  .hero {
    margin-block-end: 2rem;
  }
</style>
