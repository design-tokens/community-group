{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://designtokens.org/schemas/2025.10/format/token.json",
    "title": "Token",
    "description": "A token in the DTCG specification",
    "type": "object",
    "oneOf": [
        {
            "required": ["$value"]
        },
        {
            "required": ["$ref"]
        }
    ],
    "properties": {
        "$value": {
            "description": "The token's value - can be a direct value or a reference to another token using curly brace syntax (e.g., '{token.name}'). Mutually exclusive with $ref."
        },
        "$type": {
            "$ref": "https://designtokens.org/schemas/2025.10/format/tokenType.json"
        },
        "$ref": {
            "$ref": "https://designtokens.org/schemas/2025.10/format/format.json#/definitions/jsonPointerReference",
            "description": "JSON Pointer reference (RFC 6901) for advanced referencing. Use this instead of $value for property-level references. Examples: '#/colors/blue/$value' or '#/colors/blue/$value/components/0'. Mutually exclusive with $value."
        },
        "$description": {
            "type": "string",
            "description": "A plain text description of the token"
        },
        "$extensions": {
            "type": "object",
            "description": "Vendor-specific extensions"
        },
        "$deprecated": {
            "oneOf": [
                {
                    "type": "boolean"
                },
                {
                    "type": "string"
                }
            ],
            "description": "Whether this token is deprecated"
        }
    },
    "additionalProperties": false,
    "allOf": [
        {
            "description": "Tokens cannot define both $value and $ref; they must choose exactly one form of reference or direct value.",
            "not": {
                "required": ["$value", "$ref"]
            }
        },
        {
            "if": {
                "required": ["$type"],
                "properties": {
                    "$type": { "const": "color" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/color.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/format.json#/definitions/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "required": ["$type"],
                "properties": {
                    "$type": { "const": "dimension" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/dimension.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/format.json#/definitions/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "required": ["$type"],
                "properties": {
                    "$type": { "const": "fontFamily" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/fontFamily.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/format.json#/definitions/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "required": ["$type"],
                "properties": {
                    "$type": { "const": "fontWeight" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/fontWeight.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/format.json#/definitions/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "required": ["$type"],
                "properties": {
                    "$type": { "const": "duration" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/duration.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/format.json#/definitions/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "required": ["$type"],
                "properties": {
                    "$type": { "const": "cubicBezier" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/cubicBezier.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/format.json#/definitions/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "required": ["$type"],
                "properties": {
                    "$type": { "const": "number" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/number.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/format.json#/definitions/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "required": ["$type"],
                "properties": {
                    "$type": { "const": "strokeStyle" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/strokeStyle.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/format.json#/definitions/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "required": ["$type"],
                "properties": {
                    "$type": { "const": "border" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/border.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/format.json#/definitions/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "required": ["$type"],
                "properties": {
                    "$type": { "const": "transition" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/transition.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/format.json#/definitions/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "required": ["$type"],
                "properties": {
                    "$type": { "const": "shadow" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/shadow.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/format.json#/definitions/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "required": ["$type"],
                "properties": {
                    "$type": { "const": "gradient" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/gradient.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/format.json#/definitions/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "required": ["$type"],
                "properties": {
                    "$type": { "const": "typography" }
                }
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/typography.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/format.json#/definitions/tokenValueReference"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "allOf": [
                    {
                        "not": {
                            "required": ["$type"]
                        }
                    },
                    {
                        "required": ["$value"]
                    },
                    {
                        "properties": {
                            "$value": {
                                "not": {
                                    "$ref": "https://designtokens.org/schemas/2025.10/format/format.json#/definitions/tokenValueReference"
                                }
                            }
                        }
                    }
                ]
            },
            "then": {
                "properties": {
                    "$value": {
                        "oneOf": [
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/color.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/dimension.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/fontFamily.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/fontWeight.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/duration.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/cubicBezier.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/number.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/strokeStyle.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/border.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/transition.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/shadow.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/gradient.json"
                            },
                            {
                                "$ref": "https://designtokens.org/schemas/2025.10/format/values/typography.json"
                            }
                        ]
                    }
                }
            }
        }
    ]
}
