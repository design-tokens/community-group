{
  "name": "@dtcg/tr",
  "private": true,
  "version": "0.0.0",
  "description": "Technical reports for the design tokens specification.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/design-tokens/community-group.git",
    "directory": "technical-reports"
  },
  "scripts": {
    "build": "pnpm run mkdirs && pnpm --filter @dtcg/tr run \"/^build:.*/\"",
    "build:index": "respec index.html ../www/src/pages/TR/drafts/index.html --port 3001 --localhost --disable-sandbox",
    "build:format": "respec format/index.html ../www/src/pages/TR/drafts/format/index.html --port 3002 --localhost --disable-sandbox",
    "build:color": "respec color/index.html ../www/src/pages/TR/drafts/color/index.html --port 3003 --localhost --disable-sandbox",
    "build:resolver": "respec resolver/index.html ../www/src/pages/TR/drafts/resolver/index.html --port 3004 --localhost --disable-sandbox",
    "mkdirs": "mkdir -p ../www/src/pages/TR/drafts && mkdir -p ../www/src/pages/TR/drafts/format && mkdir -p ../www/src/pages/TR/drafts/color && mkdir -p ../www/src/pages/TR/drafts/resolver",
    "dev": "pnpm run mkdirs && pnpm --parallel --filter @dtcg/tr run \"/^dev:.*/\"",
    "dev:index": "chokidar \"index.html\" -c \"pnpm run build:index\" -d 5000",
    "dev:format": "chokidar \"format/**/*\" -c \"pnpm run build:format\" -d 5000",
    "dev:color": "chokidar \"color/**/*\" -c \"pnpm run build:color\" -d 5000",
    "dev:resolver": "chokidar \"resolver/**/*\" -c \"pnpm run build:resolver\" -d 5000",
    "lint": "prettier . --check",
    "format": "prettier . --format --write",
    "validate": "pnpm --filter @dtcg/tr run \"/^validate:.*/\"",
    "validate:index": "respec --localhost index.html --haltonerror --haltonwarn",
    "validate:format": "respec --localhost format/index.html --haltonerror --haltonwarn",
    "validate:color": "respec --localhost color/index.html --haltonerror --haltonwarn",
    "validate:resolver": "respec --localhost resolver/index.html --haltonerror --haltonwarn"
  },
  "devDependencies": {
    "chokidar": "^4.0.3",
    "chokidar-cli": "^3.0.0",
    "respec": "^35.5.1"
  }
}
